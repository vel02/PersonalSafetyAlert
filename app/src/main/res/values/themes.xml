<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalSafetyAlert" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  BAR SETTINGS  -->
    <style name="Theme.PersonalSafetyAlert.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--  TOOLBAR STYLES  -->
    <style name="Theme.PersonalSafetyAlert.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalSafetyAlert.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PersonalSafetyAlertToolBarStyle">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!--  DIALOG STYLES  -->
    <style name="PersonalSafetyAlertRoundedCornersDialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog" />


</resources>