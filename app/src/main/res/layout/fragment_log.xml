<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_default"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".ui.screen.menu.help.screen.contactus.ContactUsFragment">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/log_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_black_900"
                        android:textSize="14sp"
                        tools:text="Title" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/dividerHorizontal" />

                    <TextView
                        android:id="@+id/log_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp"
                        tools:text="This is a content that is too long to read that is why it needs a new line to display the whole message." />

                    <TextView
                        android:id="@+id/log_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/text_color_black_900"
                        android:textSize="14sp"
                        tools:text="May 14, 2022 - 12:23:43 PM" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/log_video_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video"
                        android:textColor="@color/text_color_black_900" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/dividerHorizontal" />

                    <VideoView
                        android:id="@+id/log_video"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/log_video_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:textColor="@color/link_color"
                        android:textColorLink="@color/link_color"
                        android:textSize="12sp"
                        tools:text="https://firebasestorage.googleapis.com/v0/b/personalsafetyalert-a5eef.appspot.com/o/videos%2Fuser%2FnR1YU0EOtVfvEIOPWkQ7nUwVtYF2%2F-N2ESQGfVJm5iawCNGGp%2Fvideo_1652761915451?alt=media&amp;token=0edaf1ee-ceeb-40a6-8e7f-2e9a3541479e" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/log_image_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Screenshots"
                        android:textColor="@color/text_color_black_900" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="?attr/dividerHorizontal" />


                    <ImageView
                        android:id="@+id/log_image_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/log_image_link_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:textColor="@color/link_color"
                        android:textColorLink="@color/link_color"
                        android:textSize="12sp"
                        tools:text="https://firebasestorage.googleapis.com/v0/b/personalsafetyalert-a5eef.appspot.com/o/videos%2Fuser%2FnR1YU0EOtVfvEIOPWkQ7nUwVtYF2%2F-N2ESQGfVJm5iawCNGGp%2Fvideo_1652761915451?alt=media&amp;token=0edaf1ee-ceeb-40a6-8e7f-2e9a3541479e" />


                    <ImageView
                        android:id="@+id/log_image_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/log_image_link_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:textColor="@color/link_color"
                        android:textColorLink="@color/link_color"
                        android:textSize="12sp"
                        tools:text="https://firebasestorage.googleapis.com/v0/b/personalsafetyalert-a5eef.appspot.com/o/videos%2Fuser%2FnR1YU0EOtVfvEIOPWkQ7nUwVtYF2%2F-N2ESQGfVJm5iawCNGGp%2Fvideo_1652761915451?alt=media&amp;token=0edaf1ee-ceeb-40a6-8e7f-2e9a3541479e" />


                    <ImageView
                        android:id="@+id/log_image_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/log_image_link_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:linksClickable="true"
                        android:maxLines="1"
                        android:textColor="@color/link_color"
                        android:textColorLink="@color/link_color"
                        android:textSize="12sp"
                        tools:text="https://firebasestorage.googleapis.com/v0/b/personalsafetyalert-a5eef.appspot.com/o/videos%2Fuser%2FnR1YU0EOtVfvEIOPWkQ7nUwVtYF2%2F-N2ESQGfVJm5iawCNGGp%2Fvideo_1652761915451?alt=media&amp;token=0edaf1ee-ceeb-40a6-8e7f-2e9a3541479e" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</layout>